#:import utils kivy.utils

<Button>:
    font_size: 22
    background_color: utils.get_color_from_hex("#41aee3")
    background_normal: ""
    color: 1,1,1,1
    text: "Loading text..."

<PopQuizLayout>:
    orientation: "vertical"
    padding: 40
    spacing: 20

    GridLayout:
        orientation: "horizontal"

        AnchorLayout:
            anchor_x: "left"
            GridLayout:
                orientation: "horizontal"
                size_hint_x: 0.5
                Image:
                    source: "popquiz-logo.png"

        AnchorLayout:
            anchor_x: "right"
            GridLayout:
                orientation: "horizontal"
                size_hint_x: 0.5
                Label:
                    text: "Q: Loading.../3"
                    id: question_count
                    font_size: 20
                    bold: True
                    italic: True

    Label:
        id: question_text
        text: "Loading question..."
        bold: True
        font_size: 32
        color: utils.get_color_from_hex("#ff4762")

    GridLayout:
        id: answer_grid
        cols: 2
        spacing: 10

        Button:
            id: answer_btn_1
            on_press: root.answer_handler(1)

        Button:
            id: answer_btn_2
            on_press: root.answer_handler(2)

        Button:
            id: answer_btn_3
            on_press: root.answer_handler(3)
            
        Button:
            id: answer_btn_4
            on_press: root.answer_handler(4)