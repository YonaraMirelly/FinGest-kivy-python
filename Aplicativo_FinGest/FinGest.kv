<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        ScrollView:
            do_scroll_x: True
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                Image:
                    source: 'FinGest_melhor.png'
                    allow_stretch: True
                    keep_ratio: True
                Button:
                    text: 'Gerir Agora!'
                    size_hint: (0.3, 0.1)
                    font_size: 45
                    color: (159/255.0, 226/255.0, 191/255.0, 1)
                    pos_hint: {"center_x": 0.5}
                    background_color: (118/255.0, 215/255.0, 196/255.0, 1)
                    on_press: app.root.get_screen('welcome').show_salary_input(root)
